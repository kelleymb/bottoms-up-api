    "morgan": "^1.10.0",
    "pg": "^8.3.3",
    "postgrator-cli": "^4.0.0",
    "xss": "^1.0.8"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
